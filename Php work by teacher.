<?php
for ($row=1;$row<=5;$row++){
    for ($star=1;$star<=$row;$star++){
        echo "*";
    }
    echo "<br>";
}
?>
// ğŸŒŸâ­It must print *<br> **<br> ***<br> ****<br> *****<br> *****<br> ****<br> ***<br> **<br> *<br>ğŸŒŸâ­
<?php
for ($row=1;$row<=5; $row++){
    for ($star=1; $star<=$row; $star++){
        echo "*";
    }
    echo "<br>";
}
for ($row=5; $row>=1; $row--){
    for ($star=1; $star<=$row; $star++){
        echo "*";
    }
    echo "<br>";
}
?>
//ğŸ¥‰third queestion to write the php program that calculates factorial of a number and pronts it.ğŸ¥‰
//ğŸ¤—I was asked to do that of 4 but I prefered to push of 100ğŸ˜
<?php
$num=100;
$factorial=1;
for ($i=1;$i<=$num; $i++){
    $factorial= $i* $factorial;
}
echo "factorial of 100 is $factorial";
?>
