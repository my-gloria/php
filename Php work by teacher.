//ğŸ¤—ğŸŒŸâ­Print multiplication tableğŸ¤—ğŸŒŸâ­

<?php
echo '<table border="1" cellpadding="3px" cellspacing="0px">';

for ($i = 1; $i <= 6; $i++) {
    echo '<tr>';
    for ($j = 1; $j <= 5; $j++) {
        $result = $i * $j;
        echo '<td>' . $i . ' * ' . $j . ' = ' . $result . '</td>';
    }
    echo '</tr>';
}

echo '</table>';
?>
//â­ğŸŒŸğŸ¤—ğŸ«´Print chessâ­ğŸŒŸğŸ¤—ğŸ«´

<?php
for ($row = 1; $row <= 8; $row++){
    echo "<tr>";
    for ($col = 1; $col <= 8; $col++){
        $total = $row + $col;
        if ($total % 2 == 0){
            echo "<td style='width:30px; height:30px; background-color:black;'></td>";}
            else {
echo "<td style='width:30px; height:30px; background-color:white;'></td>";
        }
    }
    echo "</tr>";
}
?>

//ğŸ«´ğŸ¤©ğŸ˜MultiplesğŸ«´ğŸ¤©ğŸ˜

<?php
echo "<table border='1' cellspacing='0' cellpadding='5'>";

for ($row = 1; $row <= 10; $row++) {
    echo "<tr>";
    for ($col = 1; $col <= 10; $col++) {
        echo "<td>" . ($row * $col) . "</td>";
    }
    echo "</tr>";
}

echo "</table>";
?>

//ğŸ˜â­ğŸŒŸPrint h using starsğŸ˜â­ğŸŒŸ

<?php
$rows = 7; 

for ($i = 1; $i <= $rows; $i++) {
    for ($j = 1; $j <= 5; $j++) { 

        if ($j == 1 || $j == 5 || ($i == 4 && $j > 1 && $j < 5)) {
            echo "*";
        } else {
            echo " ";
        }
    }
    echo "<br>"; 
}
?>

//ğŸ‘ŒğŸ¤—ğŸ¤©Enter marks print gradeğŸ‘ŒğŸ¤—ğŸ¤©

<!DOCTYPE html>
<html>
<head>
    <title>Student Grade Calculator</title>
</head>
<body>
    <h2>Enter Student Marks</h2>
    <form method="post">
        Percentage: <input type="number" name="marks" min="0" max="100" required>
        <input type="submit" name="submit" value="Display Grade">
    </form>

    <?php
    if (isset($_POST['submit'])) {
        $marks = $_POST['marks'];
        $grade = '';

        switch (intdiv($marks, 10)) {
            case 10: // 100
            case 9:
                $grade = 'A';
                break;
            case 8:
                $grade = 'B';
                break;
            case 7:
                $grade = 'C';
                break;
            case 6:
                $grade = 'D';
                break;
            case 5:
                $grade = 'E';
                break;
            case 4:
                $grade = 'F';
                break;
            case 3:
                $grade = 'S';
                break;
            default:
                $grade = 'U'; 
                break;
        }

        echo "<p>Percentage: $marks%</p>";
        echo "<p>Grade: $grade</p>";
    }
    ?>
</body>
</html>
